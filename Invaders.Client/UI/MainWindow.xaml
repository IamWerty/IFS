<Window x:Class="Invaders.Client.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invaders Client" Height="600" Width="1000"
        Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- 🔹 КНОПКИ УПРАВЛІННЯ -->
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Button Content="Connect"
                    Width="100"
                    Margin="5"
                    Click="Connect_Click"/>

            <Button Content="Login"
                    Width="100"
                    Margin="5"
                    Click="Login_Click"/>

            <Button Content="Refresh Files"
                    Width="120"
                    Margin="5"
                    Click="Refresh_Click"/>
        </StackPanel>

        <!-- 🔹 ФАЙЛОВЕ ДЕРЕВО -->
        <Border Grid.Row="1" Grid.Column="0"
                BorderBrush="#3F3F46" BorderThickness="1"
                Margin="0,0,10,10">
            <TreeView ItemsSource="{Binding Files}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" Foreground="White"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>

        <!-- 🔹 ІНФО ПРО СЕРВЕР / КОРИСТУВАЧА -->
        <Border Grid.Row="1" Grid.Column="1"
                BorderBrush="#3F3F46" BorderThickness="1"
                Margin="0,0,0,10">
            <StackPanel Margin="10">
                <TextBlock Text="Status:" Foreground="Gray"/>
                <TextBlock Text="{Binding Status}" FontSize="14" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- ЛОГИ -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                BorderBrush="#3F3F46" BorderThickness="1">
            <TextBox Text="{Binding Logs}"
                     Background="#0C0C0C"
                     Foreground="#00FF00"
                     FontFamily="Consolas"
                     FontSize="12"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </Border>
    </Grid>
</Window>
